@page
@model AtlasFuegoAdmin.Pages.AppModel
@{
    ViewData["Title"] = "App Check-in";
}

<style>
    .app-card {
        max-width: 500px;
        margin: 40px auto;
        background: linear-gradient(135deg, #1A0505 0%, #2A0A0A 100%);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        color: white;
        box-shadow: 0 10px 40px rgba(0,0,0,0.3);
    }
    .app-icon {
        width: 100px;
        height: 100px;
        border-radius: 22px;
        background: linear-gradient(135deg, #CC4400, #FF6600);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 48px;
    }
    .app-title {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 8px;
    }
    .app-subtitle {
        color: #CC9977;
        font-size: 14px;
        margin-bottom: 30px;
    }
    .app-version {
        color: #CC9977;
        font-size: 12px;
        margin-bottom: 20px;
    }
    .btn-download {
        background: linear-gradient(135deg, #CC4400, #FF6600);
        color: white;
        border: none;
        padding: 16px 40px;
        border-radius: 12px;
        font-size: 18px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .btn-download:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(204,68,0,0.4);
        color: white;
    }
    .btn-download i {
        margin-right: 8px;
    }
    .instructions {
        max-width: 500px;
        margin: 30px auto;
        text-align: left;
    }
    .instructions h5 {
        color: #CC4400;
        margin-bottom: 15px;
    }
    .instructions ol {
        padding-left: 20px;
    }
    .instructions li {
        margin-bottom: 10px;
        color: #555;
    }
    .instructions code {
        background: #f8f0ec;
        padding: 2px 6px;
        border-radius: 4px;
        color: #CC4400;
    }
    .versions-section {
        max-width: 600px;
        margin: 40px auto;
    }
    .versions-section h5 {
        color: #CC4400;
        margin-bottom: 15px;
    }
    .versions-table {
        width: 100%;
        border-collapse: collapse;
    }
    .versions-table th {
        background: #2A0A0A;
        color: #FFAA66;
        padding: 10px 14px;
        text-align: left;
        font-size: 13px;
        font-weight: 600;
    }
    .versions-table td {
        padding: 10px 14px;
        border-bottom: 1px solid #eee;
        font-size: 14px;
        color: #444;
    }
    .versions-table tr:hover td {
        background: #fdf5f0;
    }
    .versions-table .btn-dl {
        background: #CC4400;
        color: white;
        border: none;
        padding: 5px 14px;
        border-radius: 6px;
        font-size: 13px;
        text-decoration: none;
        display: inline-block;
    }
    .versions-table .btn-dl:hover {
        background: #FF6600;
        color: white;
    }
    .badge-latest {
        background: #28a745;
        color: white;
        font-size: 11px;
        padding: 2px 8px;
        border-radius: 10px;
        margin-left: 6px;
    }
</style>

<div class="container py-4">
    @if (Model.Latest != null)
    {
        <div class="app-card">
            <div class="app-icon">
                <i class="fas fa-fire" style="color:white;"></i>
            </div>
            <div class="app-title">FUEGO Check-in</div>
            <div class="app-subtitle">Aplicacion de check-in para el evento<br>Coctel de Agentes FUEGO 2026</div>
            <div class="app-version">Version @Model.Latest.Version &bull; Android &bull; @((Model.Latest.Size / (1024 * 1024))) MB</div>
            <a href="/downloads/@Model.Latest.FileName" class="btn-download">
                <i class="fas fa-download"></i> Descargar ultima version
            </a>
        </div>
    }

    @if (Model.ApkFiles.Any())
    {
        <div class="versions-section">
            <h5><i class="fas fa-history me-2"></i>Todas las versiones</h5>
            <table class="versions-table">
                <thead>
                    <tr>
                        <th>Version</th>
                        <th>Fecha</th>
                        <th>Tama√±o</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var apk in Model.ApkFiles)
                    {
                        <tr>
                            <td>
                                @apk.Version
                                @if (apk == Model.ApkFiles.First())
                                {
                                    <span class="badge-latest">ultima</span>
                                }
                            </td>
                            <td>@apk.Date.ToString("dd/MM/yyyy")</td>
                            <td>@((apk.Size / (1024 * 1024))) MB</td>
                            <td><a href="/downloads/@apk.FileName" class="btn-dl"><i class="fas fa-download"></i> Descargar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="instructions">
        <h5><i class="fas fa-info-circle me-2"></i>Instrucciones de instalacion</h5>
        <ol>
            <li>Descargar el archivo APK en el celular o tablet Android</li>
            <li>Abrir el archivo descargado. Si pide permiso para instalar de fuentes desconocidas, activarlo</li>
            <li>Completar la instalacion</li>
            <li>Abrir la app <strong>FUEGO Check-in</strong></li>
            <li>Permitir acceso a la camara cuando se solicite</li>
            <li>Tocar el icono <strong>&#x2699;</strong> (engranaje) para ir a Sincronizacion</li>
            <li>Presionar <strong>DESCARGAR REGISTROS</strong> para cargar la base de datos local</li>
            <li>Regresar al escaner y escanear codigos QR para hacer check-in</li>
        </ol>

        <h5 class="mt-4"><i class="fas fa-mobile-alt me-2"></i>Requisitos</h5>
        <ul style="color:#555;">
            <li>Android 5.0 o superior</li>
            <li>Camara trasera</li>
            <li>Conexion a internet</li>
        </ul>
    </div>
</div>

@section Scripts {
<script src="/js/app-menu.js"></script>
}
